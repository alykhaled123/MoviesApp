<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="8dp">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="120dp"
        android:layout_height="180dp"
        android:orientation="vertical" android:background="#111111">

        <ImageView
            android:id="@+id/cast_pic"
            android:layout_width="match_parent"
            android:layout_height="180dp"

            android:scaleType="fitXY"
            android:src="@mipmap/ic_launcher"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/gradient_topmovie" />

        <TextView
            android:id="@+id/cast_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp"
            android:paddingLeft="5dp"
            android:text="movie name"
            android:textColor="#FFF"
            android:textSize="17dp"
            android:textStyle="bold"
            android:fontFamily="@font/suprema_bold"
            app:layout_constraintBottom_toTopOf="@+id/character_name"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/character_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp"
            android:paddingLeft="5dp"

            android:text="Category"
            android:textColor="#FFF"
            android:textSize="12dp"
            android:fontFamily="@font/suprema_bold"
            app:layout_constraintBottom_toBottomOf="@+id/cast_pic"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>