<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#111111">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:scrollbars="vertical">

        <!--Header Layout-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#111111">

            <!--Title Text-->
            <TextView
                android:layout_width="357dp"
                android:layout_height="wrap_content"
                android:background="#111111"
                android:fontFamily="@font/changaone_regular"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text="Netflix"
                android:paddingLeft="20dp"
                android:textColor="#b81522"
                android:textSize="30dp" />

            <!--Profile Icon-->
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:cardCornerRadius="40dp"
                android:background="#111111"
                android:layout_margin="5dp"
                >
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:scaleType="fitCenter"
                    android:src="@drawable/profilepic"
                    android:background="#111111"/>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <!--Search bar-->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            app:cardUseCompatPadding="true"
            android:background="#1C1C1C"
            android:layout_marginBottom="5dp"
            app:cardElevation="0dp">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Search TV Shows and movies"
                android:textColorHint="#745D5D5D"
                android:textColor="#5D5D5D"
                android:background="#1C1C1C"
                android:fontFamily="@font/suprema_bold"
                android:padding="10dp"
                />
        </androidx.cardview.widget.CardView>

        <!--Top movie poster-->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/back"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/topmovieplacholder" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/gradient_topmovie"/>

            </FrameLayout>
            <TextView
                android:id="@+id/topmovie_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="40dp"
                android:layout_marginRight="20dp"
                android:fontFamily="@font/suprema_bold"
                android:gravity="bottom"
                android:text="Scoop"
                android:textAlignment="gravity"
                android:textColor="#FFF"
                android:textSize="40dp" />
        </FrameLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:fontFamily="@font/suprema_bold"
            android:text="Trending"
            android:textColor="#FFF"
            android:textSize="20dp"
            />

        <!--Trending Movies View-->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/trending_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="0dp">

        </androidx.recyclerview.widget.RecyclerView>

        <TextView
            android:id="@+id/movieTrailer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/suprema_bold"
            android:text="Trailer"
            android:textAlignment="viewStart"
            android:textColor="#FFF"
            android:textSize="20dp" />

        <!--Trailer Video-->
        <WebView
            android:id="@+id/trailer"
            android:layout_width="match_parent"
            android:layout_height="270dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:fontFamily="@font/suprema_bold"
            android:text="Top Rated"
            android:textAlignment="viewStart"
            android:textColor="#FFF"
            android:textSize="20dp" />

        <!--Top Rated Movies View-->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/top_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="0dp">

        </androidx.recyclerview.widget.RecyclerView>

    </LinearLayout>
</ScrollView>